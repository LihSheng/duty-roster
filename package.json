{
  "name": "duty-roster",
  "version": "1.0.0",
  "description": "A modern web application for managing cleaning duties and routine tasks in households, shared accommodations, or teams. Features drag-and-drop calendar interface, automated scheduling, and comprehensive notification system.",
  "keywords": [
    "duty-roster",
    "cleaning-schedule",
    "task-management",
    "household-management",
    "chore-tracker",
    "react",
    "nodejs",
    "sqlite"
  ],
  "author": "Duty Roster Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/duty-roster.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/duty-roster/issues"
  },
  "homepage": "https://github.com/your-username/duty-roster#readme",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd frontend && npm install",
    "seed": "node scripts/seed-database.js",
    "reset-db": "node scripts/reset-database.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:backend": "eslint server.js routes services database scripts",
    "lint:frontend": "cd frontend && eslint src"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.0",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "nodemon": "^3.0.1"
  }
}
